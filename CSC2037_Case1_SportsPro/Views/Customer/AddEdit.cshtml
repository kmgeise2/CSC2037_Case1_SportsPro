@model Customer
@{
    string title = ViewBag.Action + " Customer";
    ViewBag.Title = title;
}

<h1>@ViewBag.Title</h1>

<form asp-action="Save" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row mb-3">
        <label asp-for="FirstName" class="col-form-label col-md-2">First Name</label>
        <div class="col">
            <input asp-for="FirstName" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="LastName" class="col-form-label col-md-2">Last Name</label>
        <div class="col">
            <input asp-for="LastName" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Address" class="col-form-label col-md-2">Address</label>
        <div class="col">
            <input asp-for="Address" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="City" class="col-form-label col-md-2">City</label>
        <div class="col">
            <input asp-for="City" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="State" class="col-form-label col-md-2">State</label>
        <div class="col">
            <input asp-for="State" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="PostalCode" class="col-form-label col-md-2">Postal Code</label>
        <div class="col">
            <input asp-for="PostalCode" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="CountryID" class="col-form-label col-md-2">Country</label>
        <div class="col">
            <select asp-for="CountryID" class="form-select">
                <option value="">Select a country...</option>
                @foreach (Country c in ViewBag.Countries)
                {
                    <option value="@c.CountryID">@c.Name</option>
                }
            </select>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Email" class="col-form-label col-md-2">Email</label>
        <div class="col">
            <input asp-for="Email" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Phone" class="col-form-label col-md-2">Phone</label>
        <div class="col">
            <input asp-for="Phone" class="form-control">
        </div>
    </div>

    <input type="hidden" asp-for="CustomerID" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="List" class="btn btn-primary">Cancel</a>
</form>